{
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "always",
	"max-len": ["error", 140, 2],
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"endOfLine": "auto",
	"importOrder": [
		"^[./]",
		"^app/(.*)$",
		"^pages/(.*)$",
		"^widgets/(.*)$",
		"^features/(.*)$",
		"^entities/(.*)$",
		"^shared/(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
